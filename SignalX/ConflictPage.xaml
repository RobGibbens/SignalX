<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="SignalX.ConflictPage" 
	Title="Conflicts">

	<ContentPage.Padding>
		<OnPlatform 
			x:TypeArguments="Thickness" 
			iOS="5,20,5,5" 
			Android="5,0,5,5" 
			WinPhone="5,0,5,5" />
	</ContentPage.Padding>

	<ScrollView>
		<StackLayout 
			HorizontalOptions="FillAndExpand" 
			VerticalOptions="FillAndExpand" 
			Orientation="Vertical"
			Spacing="10">

			<Label HorizontalOptions="CenterAndExpand" Font="26" Text="Edit User" />


			<StackLayout 
				x:Name="ConflictPanel"
				HorizontalOptions="FillAndExpand" 
				BackgroundColor="Red" 
				IsVisible="false" 
				HeightRequest="50">
				<Label 
					x:Name="ConflictLabel"
					BackgroundColor="Transparent" 
					TextColor="White"
					HorizontalOptions="CenterAndExpand"
					VerticalOptions="CenterAndExpand"
					Text="Warning" />
			</StackLayout>

			<Label HorizontalOptions="FillAndExpand" Text="First Name" />
			
			<Entry x:Name="FirstNameEntry"></Entry>

			<Label HorizontalOptions="FillAndExpand" Text="Last Name" />
			
			<Entry x:Name="LastNameEntry"></Entry>

			<Button x:Name="SaveUserButton" BackgroundColor="Green" TextColor="White" Text="Save User"></Button>
		</StackLayout>
	</ScrollView>

</ContentPage>